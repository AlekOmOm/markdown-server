<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Markdown Server</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <h1>Markdown Server</h1>
    <p>Select a markdown file to view:</p>
  </header>
  <div class="container">
    <ul>
      <% files.forEach(file => { %>
        <li><a href="/content/<%= file %>"><%= file %></a></li>
      <% }); %>
    </ul>
  </div>
</body>
</html>
